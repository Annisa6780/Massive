<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".LaporandanRiwayatActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/laporan_polsek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/black"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporan Polsek Terdekat"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="left"
            android:textStyle="bold"
            android:padding="12dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/riwayat_laporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/black"
        tools:ignore="MissingConstraints"
        card_view:layout_constraintTop_toBottomOf="@id/laporan_polsek"
        card_view:layout_constraintEnd_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:cardCornerRadius="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Laporan"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="left"
            android:textStyle="bold"
            android:padding="12dp"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>