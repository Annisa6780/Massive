<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="15dp">

            <LinearLayout
                android:id="@+id/llBeranda"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@color/primery">

                <ImageView
                    android:id="@+id/beranda"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/tvBeranda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Beranda"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_variablefont_wght"
                    android:textSize="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEdu"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@color/primery">

                <ImageView
                    android:id="@+id/edu"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/file_text" />

                <TextView
                    android:id="@+id/txvEdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edukasi"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_variablefont_wght"
                    android:textSize="25dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="15dp">

            <LinearLayout
                android:id="@+id/llLapor"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@color/primery">

                <ImageView
                    android:id="@+id/lapor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/edu" />

                <TextView
                    android:id="@+id/tvLapor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pelaporan"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_variablefont_wght"
                    android:textSize="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llKontak"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@color/primery">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kontak"
                    android:textColor="@color/white"
                    android:fontFamily="@font/quicksand_variablefont_wght"
                    android:textSize="25dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>