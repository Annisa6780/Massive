<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_RiwayatLap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_title_riwayatlaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/title_riwayat"
            android:padding="15dp"
            android:text="@string/title_riwayatlap"
            card_view:cornerRadius="20dp"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/ll_riwayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/btn_title_riwayatlaporan"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/iv_gambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pengajuan"
                />

            <TextView
                android:id="@+id/jml_laporanpengajuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="15dp"
                android:text="@string/jumlah_riwayat"
                android:textAlignment="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/teks_laporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_marginLeft="8dp"
                android:text="@string/txt_laporan"
                android:textAlignment="center"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>



