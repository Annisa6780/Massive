<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding4Activity">

    <TextView
        android:id="@+id/tvEdu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/onboarding3"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/imgSharing"
        android:layout_width="300dp"
        android:layout_height="215dp"
        android:src="@drawable/ob3"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvEdu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/teks_edu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_onboarding3"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/imgSharing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnOB4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primery"
        android:text="@string/btn_onboarding"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/teks_edu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="70dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>