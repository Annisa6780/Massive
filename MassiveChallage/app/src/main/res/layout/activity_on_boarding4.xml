<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding4Activity">

    <TextView
        android:id="@+id/tvEdu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edukasi"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/imgSharing"
        android:layout_width="300dp"
        android:layout_height="245dp"
        android:src="@drawable/sharing"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/tvEdu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/teks_edu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memberikan informasi dan pengalaman untuk mencegah kekerasan atau pelecehan"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/imgSharing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnOB4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primery"
        android:text="Berikutnya"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/teks_edu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>