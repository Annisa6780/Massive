<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_regis"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap (sesuai KTP)"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="20dp"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama lengkap"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NIK"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="16"
                android:inputType="number"
                android:hint="Nomor Induk Kependudukan"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Alamat"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="40"
                android:maxLines="2"
                android:hint="Alamat (sesuai KTP)"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:maxLength="8"
                android:inputType="date"
                android:hint="DD-MM-YYYY"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Tambahkan RadioButton di dalam RadioGroup -->
                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki - Laki"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"/>

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16dp"/>
            </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Telpon Aktif"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="13"
                android:textSize="16dp"
                android:hint="08xx xxxx xxxx"
                android:fontFamily="@font/poppins_regular"
                android:inputType="phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pekerjaan"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cth: wirausaha, Mahasiswa"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Surat Pernyataan"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Surat Pernyataan"
                android:layout_margin="10dp"
                app:cornerRadius="20dp"
                android:fontFamily="@font/quicksand_variablefont_wght"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Surat Pernyataan"
                android:textSize="16dp"
                android:textColor="@color/primery"
                android:fontFamily="@font/poppins_semibold"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="xxx@gmail.com"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kata Sandi"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextTextPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Masukkan Kata Sandi"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Kata Sandi"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Masukkan Ulang Kata Sandi"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"/>

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saya telah membaca dan menyetujui" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="syarat dan ketentuan layanan"
                android:textColor="@color/primery"
                android:layout_marginLeft="35dp"/>

            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primery"
                android:text="Daftar"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/teks_pelaporan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>