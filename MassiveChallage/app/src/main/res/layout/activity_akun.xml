<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkunActivity"
    android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_foto"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:src="@drawable/profil3" />

            <TextView
                android:id="@+id/tv_namaprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zulkarnaim"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/editprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:outlineSpotShadowColor="@color/black"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:cardCornerRadius="10dp"
                tools:ignore="MissingConstraints"
                android:backgroundTint="@color/bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/person"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"/>

                    <TextView
                        android:id="@+id/tv_editprofil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:padding="12dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:outlineSpotShadowColor="@color/black"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:cardCornerRadius="10dp"
                tools:ignore="MissingConstraints"
                android:backgroundTint="@color/bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_icon1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/setting"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"/>

                    <TextView
                        android:id="@+id/tv_pengaturan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengaturan"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:padding="12dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/keluar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="90dp">

                <ImageView
                    android:id="@+id/iv_icon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/keluar"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:id="@+id/tv_keluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:padding="12dp"
                    />

            </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>