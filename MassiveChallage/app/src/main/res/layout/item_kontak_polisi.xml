<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/cv_kontak"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pp_polsek"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sementara"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/nama_polsek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Polsek Lubuk Baja"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:padding="5dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/alamat_polsek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Bunga Raya, Baloi Indah,
Batam Kota, Kota Batam, Kepulauan Riau"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_variablefont_wght"
                android:padding="5dp"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/telp_polsek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(0778) 457212"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_variablefont_wght"
                android:padding="5dp"
                android:textSize="16dp"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>